<Window x:Class="PhotoStudio.CapchaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoStudio"
        mc:Ignorable="d"
        Title="CaptchaWin" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock x:Name="Captha" Margin="10" Width="100">***</TextBlock>
            <TextBox x:Name="CapthaProv" Margin="10"></TextBox>
            <Button Content="Ok" Margin="10" Click="OkClick"></Button>
        </StackPanel>
    </Grid>
</Window>
