<Window x:Class="PhotoStudio.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoStudio"
        mc:Ignorable="d"
        Title="AddWin" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label>Название:</Label>
                <TextBox x:Name="NameTB" Width="120" Margin="6"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label>Описание:</Label>
                <TextBox x:Name="Desc" Width="120" Margin="6"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label>Цена:</Label>
                <TextBox x:Name="Price" Width="120" Margin="6"/>
            </StackPanel>

            <Button Click="Save">Сохранить</Button>
        </StackPanel>
    </Grid>
</Window>
